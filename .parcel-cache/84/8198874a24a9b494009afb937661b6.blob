* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Montserrat", sans-serif;
  line-height: 1.4;
  background-color: #80ff72;
  background-image: linear-gradient(315deg, #7ee8fa 0%, #80ff72 74%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2d6188;
}

.container {
  max-width: 1200px;
  background-color: #effad3;
  margin: 0 auto;
  padding: 5rem;
}